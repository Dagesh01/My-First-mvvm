<Window x:Class="Chart.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chart" xmlns:models="clr-namespace:Chart.Models" 
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="290" >
    <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
        <Label>
            Customer Name :</Label>
        <TextBox Width="136" Text="{Binding Customer.Name,UpdateSourceTrigger=PropertyChanged}"/>
            <Button Command="{Binding UpdateCommand}">Update</Button>
        
    </StackPanel>
</Window>
